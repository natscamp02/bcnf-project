<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body class="font-poppins">
    <div class="grid grid-cols-layout overflow-hidden">
        <%- include('../partials/sidebar', { activeLink : 'supervisor' } ) %>

            <main class="bg-gray-50 h-screen overflow-y-auto">
                <div class="container py-8">
                    <!-- Main Content -->
                    <div class="flex items-center justify-between mb-3">
                        <h1 class="text-3xl font-medium text-gray-700">All Supervisors</h1>

                        <a class="btn" href="/supervisors/add">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                            </svg>
                            Add a new supervisor
                        </a>
                    </div>

                    <hr>

                    <!-- Supervisor List -->
                    <div class="mt-6">
                        <table class="text-center w-full rounded overflow-hidden">
                            <thead>
                                <tr class="bg-gray-800 text-white">
                                    <th class="p-4 font-medium">Supervisor Name</th>
                                    <th class="p-4 font-medium">Department</th>
                                    <th class="p-4 font-medium">Date Joined</th>
                                    <th class="p-4 font-medium"># Of Employees Supervising</th>
                                    <th class="p-4 font-medium">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% if (supervisors.length) { %>
                                    <% supervisors.forEach(sup=> { %>
                                        <tr class="border-b bg-white text-gray-600">
                                            <td class="p-4">
                                                <%= sup.first_name + ' ' + sup.last_name %>
                                            </td>
                                            <td class="p-4">
                                                <%= sup.department %>
                                            </td>
                                            <td class="p-4">
                                                <%= new Date(sup.date_joined).toLocaleDateString() %>
                                            </td>
                                            <td class="p-4">
                                                <%= sup.num_of_supervising || 'N/A' %>
                                            </td>
                                            <td class="p-4 flex gap-2 justify-center">
                                                <a class="btn-icon shadow text-blue-500"
                                                    href="/supervisors/<%= sup.id %>/edit" title="Edit">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                                                        viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                    </svg>
                                                </a>
                                                <a class="btn-icon shadow text-red-500"
                                                    href="/supervisors/<%= sup.id %>/delete" title="Delete">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                                                        viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr class="bg-white">
                                                    <td class="text-center py-8" colspan="7">
                                                        <h2 class="text-4xl font-medium">No Records Found</h2>
                                                    </td>
                                                </tr>
                                                <% } %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
    </div>
</body>

</html>